<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Brew Type #<%= @brew_type.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @brew_type.name %></dd>

              <dt>Description</dt>
              <dd><%= @brew_type.description %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to icon('chevron-left'), brew_types_path, class: "btn btn-primary" %>

              <%= link_to icon('edit'), edit_brew_type_path(@brew_type), class: "btn btn-warning" %>

              <%= link_to icon('trash-o'), @brew_type, method: :delete, data: { confirm: "Do you really want to delete this brew_type?" }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
